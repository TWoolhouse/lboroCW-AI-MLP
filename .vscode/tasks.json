{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Pre-Process",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/src/process/main.py",
				"-p",
			],
			"group": "build",
			"detail": "Pre-process the dataset in to multiple variations",
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/src/process/main.py",
				"-b",
			],
			"group": "build",
			"detail": "Compile the Training Program",
		},
		{
			"label": "Train",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/src/process/main.py",
				"-t",
			],
			"group": "build",
			"detail": "Train the Models",
		},
		{
			"label": "Complete",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/src/process/main.py",
				"-p",
				"-b",
				"-t",
			],
			"group": "build",
			"detail": "Complete run through",
		},
		{
			"label": "MSBuild-Compile",
			"type": "shell",
			"command": "msbuild",
			"problemMatcher": "$msCompile",
			"args": [
				"ai.sln",
				"/p:configuration=Debug",
				"/m",
				"/verbosity:minimal"
			],
			"options": {
				"env": {
					"MLP_VARIANT": "default",
					"MLP_BUILD_OPTIONS": "/DMLP_TRAINING /DMLP_HEIGHT=5 /DMLP_ACTIVATION_SIGMOID",
				}
			},
			"group": "build",
			"detail": "Compiles to satisfy intellisense"
		},
		{
			"label": "Compile Report",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/design/compile.py"
			],
			"group": "build",
			"detail": "Compile the Report Markdown to PDF"
		}
	]
}
